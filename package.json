{
  "name": "sync-show",
  "version": "1.2.0-beta",
  "description": "Synchronized bilingual presentation display for church services",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:linux": "electron . --no-sandbox",
    "dev": "electron . --dev",
    "dev:linux": "electron . --no-sandbox --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "generate-icon": "node scripts/generate-icon.js"
  },
  "keywords": [
    "presentation",
    "church",
    "bilingual",
    "powerpoint",
    "dual-screen"
  ],
  "author": {
    "name": "Oles Maiovskyi",
    "email": "oles@mayo.onl"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "png-to-ico": "^3.0.1"
  },
  "dependencies": {
    "mupdf": "^1.27.0",
    "pptxtojson": "^1.12.0",
    "sharp": "^0.33.2"
  },
  "build": {
    "appId": "com.church.syncshow",
    "productName": "SyncShow",
    "copyright": "Copyright Â© 2026 Church Media Team",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Church Media Team",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/icon-512.png",
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "appImage": {
      "artifactName": "${productName}-${version}.AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SyncShow",
      "license": "LICENSE.txt"
    },
    "dmg": {
      "title": "SyncShow ${version}",
      "icon": "assets/icon-512.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "afterPack": "./scripts/afterPack.js",
    "files": [
      "**/*",
      "!cache/**",
      "!dist/**",
      "!*.md",
      "!.git/**"
    ],
    "asarUnpack": [
      "node_modules/sharp/**",
      "node_modules/@img/**"
    ],
    "asar": true,
    "compression": "maximum"
  }
}
